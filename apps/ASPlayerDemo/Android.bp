        "androidx.appcompat_appcompat",
        "androidx.annotation_annotation",
        "androidx-constraintlayout_constraintlayout",
        "droidlogic.jniasplayer.wrapper",
    ],

    libs: [
        "droidlogic.jniasplayer",
    ],

    jni_libs: [
        "libjniasplayer-wrapper",
    ],
*/

// Method 2: jniasplayer-wrapper -> static_libs, jniasplayer -> static_libs
// built jniasplayer-wrapper as normal java_library
// built jniasplayer as normal java_library
    manifest: "src/main/AndroidManifest.xml",
    static_libs: [
        "androidx.recyclerview_recyclerview",
        "androidx.appcompat_appcompat",
        "androidx.annotation_annotation",
        "androidx-constraintlayout_constraintlayout",
        "droidlogic.jniasplayer.wrapper",
        "droidlogic.jniasplayer",
    ],

    libs: [

    ],

    jni_libs: [
        "libjniasplayer-jni",
        "libjniasplayer-wrapper",
    ],

}
